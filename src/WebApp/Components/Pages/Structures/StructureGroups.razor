@attribute [Route($"/{Route}")]
@using Microsoft.AspNetCore.Authorization
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>@Texts.TitleStructureGroups</PageTitle>
<div class="d-flex gap-3 align-items-center">
    <h3>@Texts.TitleStructureGroups</h3>
    <a href="@Route" class="link-as-button" title="@Texts.LinkTitleCreateStructureGroup">
        <img src="images/plus.svg" alt="plus" height="24" width="24" aria-hidden="true" />
    </a>
</div>

<div id="structure-groups">
    @foreach(var group in _model.StructureGroups)
    {
        string optionsId = $"options-{group.Id!.Value}";
        string createStructureOptionId = $"create-structure-option-{group.Id!.Value}";
        
        <div class="d-flex justify-content-between">
            <div id="group-@(group.Id!.Value)-details" class="d-flex w-100 justify-content-between">
                <span class="w-100">@group.Name</span>
                <span class="w-100">@group.Path</span>
            </div>
            <div class="dropdown">
                <button type="button"
                        title="Optionen"
                        class="all-unset cursor-pointer"
                        id="@optionsId"
                        data-bs-toggle="dropdown"
                        aria-expanded="false">
                    <Ellipsis Width="25" />
                </button>
                <ul class="dropdown-menu" aria-labelledby="@optionsId">
                    <li>
                        <button type="button" id="@createStructureOptionId" class="dropdown-item" @onclick="OnOption1Selected">
                            <div class="d-inline-flex align-items-center gap-2">
                                <img src="images/plus.svg" height="20" title="@Texts.TitleCreateStructure" alt="@Texts.TitleCreateStructure" aria-hidden="true"/>
                                @Texts.TitleCreateStructure
                            </div>
                        </button>
                    </li>
                    <li>
                        <button type="button" id="option-2" class="dropdown-item" @onclick="OnOption2Selected">Option 2</button>
                    </li>
                    <li>
                        <button type="button" id="option-3" class="dropdown-item" @onclick="OnOption3Selected">...</button>
                    </li>
                </ul>
            </div>
        </div>
    }
</div>

@code {
    [Inject] public ILogger<StructureGroups>? Logger { get; set; }

    public void OnOption1Selected(MouseEventArgs _)
    {
        Logger!.LogInformation("Option 1 ausgewählt");
    }

    public void OnOption2Selected()
    {
        Logger!.LogInformation("Option 2 ausgewählt");
    }

    public void OnOption3Selected()
    {
        Logger!.LogInformation("Option 3 ausgewählt");
    }
}
